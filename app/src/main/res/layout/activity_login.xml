<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon"
    tools:context=".UI.Activities.LogRegResForEnter.loginActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="162dp"
        android:layout_height="256dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="150sp"
        android:layout_marginRight="150sp"
        android:src="@drawable/logo"

        />

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:textColor="@color/forText"
        android:textSize="40sp"
        android:textStyle="italic|bold" />

    <EditText
        android:id="@+id/loginEmail"
        android:layout_width="800sp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="25sp"
        android:layout_marginTop="20sp"
        android:layout_marginRight="25sp"
        android:background="@drawable/input_design"
        android:hint="@string/enter_email"
        android:inputType="textEmailAddress"
        android:padding="20sp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/loginPassword"
        android:layout_width="800sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginEmail"
        android:layout_centerInParent="true"
        android:layout_marginLeft="25sp"
        android:layout_marginTop="20sp"
        android:layout_marginRight="25sp"
        android:autofillHints="password"
        android:background="@drawable/input_design"
        android:hint="@string/enter_password"
        android:inputType="textPassword"
        android:padding="20sp"
        android:textColor="@color/black" />

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="380sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginPassword"
        android:layout_marginStart="15sp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBoxBlvme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:alpha="0.5"
            android:text="@string/believe_me" />

        <TextView
            android:id="@+id/forgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70sp"
            android:hint="@string/forget_password"
            android:textSize="17sp"

            />

    </LinearLayout>

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="800sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:backgroundTint="@color/forBtn"
        android:text="@string/starttext"
        android:textSize="20sp">


    </Button>

    <LinearLayout
        android:id="@+id/linear_layout_for_adminUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">

    </LinearLayout>


</RelativeLayout>